---
interface Props {
  heading?: string;
  description?: string;
  logos: Array<{
    name: string;
    image?: string;
    url?: string;
    color?: string;
    textLogo?: boolean;
  }>;
  animated?: boolean;
  grayscale?: boolean;
  theme?: 'default' | 'gold' | 'emerald';
}

const {
  heading,
  description,
  logos,
  animated = true,
  grayscale = true,
  theme = 'default'
} = Astro.props;

const themeConfig = {
  default: {
    background: 'bg-white',
    border: 'border-gray-100'
  },
  gold: {
    background: 'bg-amber-50',
    border: 'border-amber-100'
  },
  emerald: {
    background: 'bg-emerald-50',
    border: 'border-emerald-100'
  }
};

const currentTheme = themeConfig[theme as keyof typeof themeConfig];
---

<section class={`py-16 ${currentTheme.background} border-t ${currentTheme.border}`}>
  <div class="container px-6">
    {(heading || description) && (
      <div class="text-center mb-12">
        {heading && (
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            {heading}
          </h2>
        )}
        {description && (
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            {description}
          </p>
        )}
      </div>
    )}

    <div class="relative overflow-hidden">
      <div class={`flex ${animated ? 'animate-scroll' : ''} ${animated ? 'w-max' : 'flex-wrap justify-center'}`}>
        {animated ? [...logos, ...logos].map((logo: any, index: number) => (
          <div class="flex-shrink-0 mx-8">
            {logo.url ? (
              <a href={logo.url} target="_blank" rel="noopener noreferrer" class="block">
                {logo.textLogo ? (
                  <div 
                    class={`h-12 px-6 rounded-lg flex items-center justify-center text-white font-bold text-lg ${grayscale ? 'grayscale hover:grayscale-0' : ''} transition-all duration-300 hover:scale-110`}
                    style={`background-color: ${logo.color || '#4F46E5'}`}
                  >
                    {logo.name}
                  </div>
                ) : (
                  <img
                    src={logo.image}
                    alt={logo.name}
                    class={`h-12 object-contain ${grayscale ? 'grayscale hover:grayscale-0' : ''} transition-all duration-300 hover:scale-110`}
                  />
                )}
              </a>
            ) : (
              logo.textLogo ? (
                <div 
                  class={`h-12 px-6 rounded-lg flex items-center justify-center text-white font-bold text-lg ${grayscale ? 'grayscale' : ''}`}
                  style={`background-color: ${logo.color || '#4F46E5'}`}
                >
                  {logo.name}
                </div>
              ) : (
                <img
                  src={logo.image}
                  alt={logo.name}
                  class={`h-12 object-contain ${grayscale ? 'grayscale' : ''}`}
                />
              )
            )}
          </div>
        )) : logos.map((logo: any, index: number) => (
          <div class="mx-6 mb-8">
            {logo.url ? (
              <a href={logo.url} target="_blank" rel="noopener noreferrer" class="block">
                {logo.textLogo ? (
                  <div 
                    class={`h-12 px-6 rounded-lg flex items-center justify-center text-white font-bold text-lg ${grayscale ? 'grayscale hover:grayscale-0' : ''} transition-all duration-300 hover:scale-110`}
                    style={`background-color: ${logo.color || '#4F46E5'}`}
                  >
                    {logo.name}
                  </div>
                ) : (
                  <img
                    src={logo.image}
                    alt={logo.name}
                    class={`h-12 object-contain ${grayscale ? 'grayscale hover:grayscale-0' : ''} transition-all duration-300 hover:scale-110`}
                  />
                )}
              </a>
            ) : (
              logo.textLogo ? (
                <div 
                  class={`h-12 px-6 rounded-lg flex items-center justify-center text-white font-bold text-lg ${grayscale ? 'grayscale' : ''}`}
                  style={`background-color: ${logo.color || '#4F46E5'}`}
                >
                  {logo.name}
                </div>
              ) : (
                <img
                  src={logo.image}
                  alt={logo.name}
                  class={`h-12 object-contain ${grayscale ? 'grayscale' : ''}`}
                />
              )
            )}
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  .animate-scroll {
    animation: scroll 30s linear infinite;
  }
  
  .animate-scroll:hover {
    animation-play-state: paused;
  }
</style>
