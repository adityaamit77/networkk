---
export interface Props {
  theme?: 'default' | 'gold' | 'emerald';
}

const { theme = 'default' } = Astro.props;

const themeConfig = {
  default: {
    background: 'bg-gradient-to-br from-blue-900 via-blue-800 to-blue-900',
    accent: 'blue',
    dotColor: 'bg-blue-400',
    companyDotColor: 'bg-purple-400'
  },
  gold: {
    background: 'bg-gradient-to-br from-amber-900 via-yellow-800 to-amber-900',
    accent: 'amber',
    dotColor: 'bg-amber-400',
    companyDotColor: 'bg-yellow-400'
  },
  emerald: {
    background: 'bg-gradient-to-br from-emerald-900 via-teal-800 to-emerald-900',
    accent: 'emerald',
    dotColor: 'bg-emerald-400',
    companyDotColor: 'bg-teal-400'
  }
};

const currentTheme = themeConfig[theme as keyof typeof themeConfig];
---

<footer class={`${currentTheme.background} text-white relative overflow-hidden`}>
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class={`absolute top-0 left-0 w-96 h-96 bg-${currentTheme.accent}-400 rounded-full mix-blend-multiply filter blur-3xl animate-pulse-soft`}></div>
    <div class={`absolute bottom-0 right-0 w-96 h-96 bg-${currentTheme.accent}-400 rounded-full mix-blend-multiply filter blur-3xl animate-pulse-soft animation-delay-400`}></div>
    <div class={`absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-${currentTheme.accent}-400 rounded-full mix-blend-multiply filter blur-3xl animate-pulse-soft animation-delay-200`}></div>
  </div>
  
  <div class="relative">
    <!-- Main Footer Content -->
    <div class="container py-20">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
        <!-- Company Info - Spans 5 columns -->
        <div class="lg:col-span-5">
          <div class="mb-8">
            <div class="inline-flex items-center bg-white/10 backdrop-blur-sm px-4 py-2 rounded-xl border border-white/20">
              <img src="/logo.png" alt="Networkk Logo" class="h-8 w-auto filter brightness-0 invert" />
            </div>
          </div>
          <p class={`text-${currentTheme.accent}-100 mb-8 leading-relaxed text-lg max-w-md`}>
            Executive search and leadership hiring experts transforming organizations through exceptional talent. We connect visionary leaders with forward-thinking companies.
          </p>
          <div class="flex space-x-4">
            <a href="https://linkedin.com/company/networkk" class="group p-4 bg-white/5 backdrop-blur-sm rounded-xl hover:bg-white/10 transition-all duration-300 hover:-translate-y-1 border border-white/10 hover:border-white/20">
              <svg class={`w-6 h-6 text-${currentTheme.accent}-200 group-hover:text-white transition-colors`} fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd" />
              </svg>
            </a>
            <a href="https://twitter.com/networkk" class="group p-4 bg-white/5 backdrop-blur-sm rounded-xl hover:bg-white/10 transition-all duration-300 hover:-translate-y-1 border border-white/10 hover:border-white/20">
              <svg class={`w-6 h-6 text-${currentTheme.accent}-200 group-hover:text-white transition-colors`} fill="currentColor" viewBox="0 0 20 20">
                <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84" />
              </svg>
            </a>
            <a href="#" class="group p-4 bg-white/5 backdrop-blur-sm rounded-xl hover:bg-white/10 transition-all duration-300 hover:-translate-y-1 border border-white/10 hover:border-white/20">
              <svg class={`w-6 h-6 text-${currentTheme.accent}-200 group-hover:text-white transition-colors`} fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>
        
        <!-- Services -->
        <div class="lg:col-span-2">
          <h3 class="font-semibold text-white mb-8 text-xl">Services</h3>
          <ul class="space-y-4">
            <li><a href="/services/executive-search" class={`text-${currentTheme.accent}-200 hover:text-white hover:translate-x-1 transition-all duration-200 flex items-center group text-lg`}>
              <span class={`w-2 h-2 ${currentTheme.dotColor} rounded-full mr-4 group-hover:bg-white transition-colors group-hover:scale-110`}></span>
              Executive Search
            </a></li>
            <li><a href="/services/leadership-hiring" class={`text-${currentTheme.accent}-200 hover:text-white hover:translate-x-1 transition-all duration-200 flex items-center group text-lg`}>
              <span class={`w-2 h-2 ${currentTheme.dotColor} rounded-full mr-4 group-hover:bg-white transition-colors group-hover:scale-110`}></span>
              Leadership Hiring
            </a></li>
            <li><a href="/services/talent-advisory" class={`text-${currentTheme.accent}-200 hover:text-white hover:translate-x-1 transition-all duration-200 flex items-center group text-lg`}>
              <span class={`w-2 h-2 ${currentTheme.dotColor} rounded-full mr-4 group-hover:bg-white transition-colors group-hover:scale-110`}></span>
              Talent Advisory
            </a></li>
            <li><a href="/services/diversity-inclusion" class={`text-${currentTheme.accent}-200 hover:text-white hover:translate-x-1 transition-all duration-200 flex items-center group text-lg`}>
              <span class={`w-2 h-2 ${currentTheme.dotColor} rounded-full mr-4 group-hover:bg-white transition-colors group-hover:scale-110`}></span>
              D&I Consulting
            </a></li>
            <li><a href="/services/career-transition" class={`text-${currentTheme.accent}-200 hover:text-white hover:translate-x-1 transition-all duration-200 flex items-center group text-lg`}>
              <span class={`w-2 h-2 ${currentTheme.dotColor} rounded-full mr-4 group-hover:bg-white transition-colors group-hover:scale-110`}></span>
              Career Transition
            </a></li>
          </ul>
        </div>
        
        <!-- Company -->
        <div class="lg:col-span-2">
          <h3 class="font-semibold text-white mb-8 text-xl">Company</h3>
          <ul class="space-y-4">
            <li><a href="/our-approach" class={`text-${currentTheme.accent}-200 hover:text-white hover:translate-x-1 transition-all duration-200 flex items-center group text-lg`}>
              <span class={`w-2 h-2 ${currentTheme.companyDotColor} rounded-full mr-4 group-hover:bg-white transition-colors group-hover:scale-110`}></span>
              Our Approach
            </a></li>
            <li><a href="/why-choose-us" class={`text-${currentTheme.accent}-200 hover:text-white hover:translate-x-1 transition-all duration-200 flex items-center group text-lg`}>
              <span class={`w-2 h-2 ${currentTheme.companyDotColor} rounded-full mr-4 group-hover:bg-white transition-colors group-hover:scale-110`}></span>
              Why Choose Us
            </a></li>
            <li><a href="/events" class={`text-${currentTheme.accent}-200 hover:text-white hover:translate-x-1 transition-all duration-200 flex items-center group text-lg`}>
              <span class={`w-2 h-2 ${currentTheme.companyDotColor} rounded-full mr-4 group-hover:bg-white transition-colors group-hover:scale-110`}></span>
              Events
            </a></li>
            <li><a href="/partner-with-us" class={`text-${currentTheme.accent}-200 hover:text-white hover:translate-x-1 transition-all duration-200 flex items-center group text-lg`}>
              <span class={`w-2 h-2 ${currentTheme.companyDotColor} rounded-full mr-4 group-hover:bg-white transition-colors group-hover:scale-110`}></span>
              Partner With Us
            </a></li>
            <li><a href="/careers" class={`text-${currentTheme.accent}-200 hover:text-white hover:translate-x-1 transition-all duration-200 flex items-center group text-lg`}>
              <span class={`w-2 h-2 ${currentTheme.companyDotColor} rounded-full mr-4 group-hover:bg-white transition-colors group-hover:scale-110`}></span>
              Careers
            </a></li>
          </ul>
        </div>
        
        <!-- Contact -->
        <div class="lg:col-span-3">
          <h3 class="font-semibold text-white mb-8 text-xl">Contact</h3>
          <div class="space-y-6">
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-white/10 backdrop-blur-sm rounded-xl flex items-center justify-center border border-white/20">
                <svg class={`w-6 h-6 text-${currentTheme.accent}-200`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <p class={`text-${currentTheme.accent}-200 text-lg`}>hello@networkk.com</p>
              </div>
            </div>
            
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-white/10 backdrop-blur-sm rounded-xl flex items-center justify-center border border-white/20">
                <svg class={`w-6 h-6 text-${currentTheme.accent}-200`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <p class={`text-${currentTheme.accent}-200 text-lg`}>+91 22 1234 5678</p>
              </div>
            </div>
            
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-white/10 backdrop-blur-sm rounded-xl flex items-center justify-center border border-white/20">
                <svg class={`w-6 h-6 text-${currentTheme.accent}-200`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <p class={`text-${currentTheme.accent}-200 text-lg`}>Mumbai, India</p>
              </div>
            </div>
            
            <div class="pt-4">
              <a href="/contact" class="inline-flex items-center px-6 py-3 bg-white/10 backdrop-blur-sm text-white font-semibold rounded-xl hover:bg-white/20 transition-all duration-300 border border-white/20 hover:border-white/30 group">
                Get in Touch
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class={`border-t border-${currentTheme.accent}-800/50 bg-black/20`}>
      <div class="container py-6">
        <div class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0">
          <p class={`text-${currentTheme.accent}-200 text-sm`}>
            &copy; 2025 Networkk. All rights reserved. |
            <a href="/privacy" class="hover:text-white transition-colors">Privacy Policy</a> |
            <a href="/terms" class="hover:text-white transition-colors">Terms of Service</a> |
            <a href="/sitemap" class="hover:text-white transition-colors">Sitemap</a>
          </p>
          <div class={`flex items-center space-x-4 text-sm text-${currentTheme.accent}-200`}>
            <span>Made with</span>
            <svg class="w-4 h-4 text-red-400 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
            </svg>
            <span>in India</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
