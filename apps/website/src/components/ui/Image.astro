---
export interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
  decoding?: 'async' | 'sync' | 'auto';
  sizes?: string;
}

const {
  src,
  alt,
  width,
  height,
  class: className = '',
  loading = 'lazy',
  decoding = 'async',
  sizes
} = Astro.props;

if (alt === undefined) {
  throw new Error('Image alt text is required. Use alt="" for decorative images.');
}

// Check if this is a local image that should be optimized
const isLocalImage = src.startsWith('/') && !src.startsWith('//');

// Only generate picture element for images that have explicit WebP/AVIF versions
// For now, we'll use simple img tags until we have optimized versions
const shouldOptimize = src.includes('/profile/'); // Enable optimization for profile images

const base = src.replace(/\.[^/.]+$/, '');
const avif = `${base}.avif`;
const webp = `${base}.webp`;
---

{isLocalImage && shouldOptimize ? (
  <picture>
    <source srcset={avif} type="image/avif" />
    <source srcset={webp} type="image/webp" />
    <img
      src={src}
      alt={alt}
      width={width}
      height={height}
      loading={loading}
      decoding={decoding}
      sizes={sizes}
      class={className}
      fetchpriority={loading === 'eager' ? 'high' : undefined}
    />
  </picture>
) : (
  <img
    src={src}
    alt={alt}
    width={width}
    height={height}
    loading={loading}
    decoding={decoding}
    sizes={sizes}
    class={className}
    fetchpriority={loading === 'eager' ? 'high' : undefined}
  />
)}
